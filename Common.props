    <PropertyGroup>
        <TargetFramework>net48</TargetFramework>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>

        <Version>0.0.3.7</Version>
        <FileVersion>0.0.3.7</FileVersion>

        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>latest</LangVersion>
        <Optimize>true</Optimize>
        <Configurations>SN.STABLE;SN.MULTI;BZ.STABLE;BZ.MULTI</Configurations>
        <Platforms>AnyCPU</Platforms>

        <Company>MatrixDJ96</Company>
        <Copyright>Copyright Â© 2025</Copyright>

        <ReferencePath>$(SolutionDir)Dependencies\$(Configuration)</ReferencePath>
    </PropertyGroup>

    <PropertyGroup>
        <NoWarn>$(NoWarn);MSB3246;MSB3277</NoWarn>
    </PropertyGroup>
</Project>
